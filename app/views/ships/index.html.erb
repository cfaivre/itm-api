<h1>Listing ships</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Short name</th>
    <th>Shipping company</th>
    <th>Shipping type</th>
    <th>Sid</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ships.each do |ship| %>
  <tr>
    <td><%= ship.name %></td>
    <td><%= ship.short_name %></td>
    <td><%= ship.shipping_company_id %></td>
    <td><%= ship.shipping_type_id %></td>
    <td><%= ship.sid %></td>
    <td><%= link_to 'Show', ship %></td>
    <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
    <td><%= link_to 'Destroy', ship, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

